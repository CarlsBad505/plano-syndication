<!DOCTYPE html>
<html>
<head>
  <title>PlanomaticSyndication</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="flash">
    <% if flash[:error] %>
        <div class="alert alert-danger alert-dismissible flash-position">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= flash[:error] %>
        </div>
    <% end %>
</div>

<%= yield %>

</body>
</html>
